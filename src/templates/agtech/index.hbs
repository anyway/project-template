        </div>
    </div>
</section>
<section>
    <div class="art-block green-strip"></div>
    <div class="content-block">
        <h2>Members</h2>
        <ul class="team-list">
            {{#each team}}
                <li class="team-member">
                    <div class="image-wrapper">
                        <img src="{{ this.profile }}" />
                    </div>
                    <div class="text">
                        <h3>{{ this.name }}</h3>
                        <p>{{ this.bio }}</p>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
    <div class="art-block green-strip"></div>
</section>
<footer>
    <div class="content-block">
        <h2>Get in touch</h2>
        <a class="button" href="mailto:agtech@joininteract.com">agtech@joininteract.com</a>
        <p>&copy; 2020 Interact</p>
    </div>
</footer>
{{/content}}
{{/extend}}
